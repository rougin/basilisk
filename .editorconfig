; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
insert_final_newline = true

[*.{html,js,ts}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 4
