{
    "name": "rougin/slytherin-skeleton",
    "description": "A simple Slytherin-based web application",
    "keywords": [
        "php",
        "application",
        "skeleton",
        "slytherin"
    ],
    "require": {
        "rougin/slytherin": "^0.4.0",
        "doctrine/orm": "^2.5",
        "jms/serializer": "^1.0",
        "zendframework/zend-diactoros": "^1.3",
        "filp/whoops": "^1.1",
        "vlucas/valitron": "^1.2",
        "hassankhan/config": "^0.8.2",
        "container-interop/container-interop": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
