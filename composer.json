{
    "name": "rougin/basilisk",
    "description": "A Slytherin skeleton application.",
    "keywords": ["basilisk", "skeleton application", "slytherin"],
    "homepage": "https://github.com/rougin/basilisk",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "http://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "filp/whoops": "~1.0 || ~2.0",
        "illuminate/view": "~4.1 || ~5.0",
        "robmorgan/phinx": "0.5.* || ~0.9",
        "rougin/slytherin": "~0.9",
        "rougin/weasley": "~0.5",
        "vlucas/phpdotenv": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "scrutinizer/ocular": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
